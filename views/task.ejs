    	div{
    		width: 400px;
    		margin-left: 5px;
    		float: left;
    		 
    	}
    	input{
    		border:1px solid black;
    	}
      #profileimg{
        height: 200px;
        width: 200px;
        border-radius: 50%;
      }
      #al{
        width: 100%;
      }
    </style>
</head>
<body >
   <% if(success!=''){ %>
   <div id="al" class="alert alert-success alert-dismissible">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <strong>Success!</strong> <%= success %>.
  </div>
  <%} %>
 

<div>
  <h1>Your Tasks</h1>
  <a href="/add/task" class="btn btn-info">New Task</a>
  <a href="/see/task/all" class="btn btn-info">All Tasks</a>
  <ol>
    <li>Date task is added </li>
    <li>Heading</li>
    <li>Message</li>
    <li>task should be completed by Date </li>
    <li>Send Mail about Task added</li>

  </ol>
</div>


<div>
<form action="/post/task/" method="POST">
  <div class="form-group">
    <label>Title Work</label>
    <input type="text" name="title" class="form-control" id="exampleInputText" aria-describedby="textHelp" placeholder="Enter Title">
   </div>
   <div class="form-group">
  <label for="exampleFormControlTextarea1">Write content</label>
  <textarea class="form-control rounded-0" name="content" id="exampleFormControlTextarea1" rows="5"> </textarea>
  </div>
  <div class="form-group">
    <label>Date you want complete  your work by date</label>
    <input type="date"  name="completedDate" class="form-control"   placeholder="Enter Date">
  </div>

   
  
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>

 




